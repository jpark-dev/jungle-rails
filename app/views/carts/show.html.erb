<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if (!enhanced_cart.empty?) %>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% enhanced_cart.each do |item| %>
          <%= render 'item', product: item[:product], quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= "$#{'%.2f' % (cart_subtotal_cents / 100)}" %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= form_tag orders_path do %>
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= cart_subtotal_cents %>"
          data-name="Jungle"
          data-description="Khurram Virani's Jungle Order"
          data-locale="auto"
          data-email="kvirani@gmail.com"
          data-currency="cad">
        </script>
      <% end %>
    </div>
  </div>

  <% else %>
  <div style="display: flex; flex-direction: column">
    <div class="alert alert-warning" role="alert" style="text-align: center">
      Your cart is currenlty empty. Please add some items before proceed.
    </div>
    <a class="btn btn-primary" href="./">To Home</a>
  </div>
  <% end %>

</section>
